<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

    <style>
        .block {
            display: block;
            margin: 10px;
            border: 2px dotted gray;
            padding: 10px;
        }
          .block2 {
            display: inline-block;
            margin: 5px;
            border: 2px dotted #b21616;
            padding: 10px;
        }

        #menu ul li {
            
            display:inline-block;
            width:300px;
            height:30px;
            text-align:center;
            border:1px solid #1F98C7;
            background-color:#58B3F0;
            margin:10px;
            line-height:30px;
            vertical-align:middle;
            

        }
        #menu a {
           color:#ad1111;
           text-decoration:none;
           font-size:smaller;
           font-size:large;
           
        }
        #menu li:hover {
            background-color:#78C1DD

        }

        #menu  li:hover a {
            color:aliceblue;
        }
    </style>
   
</head>
<body>

    <div id="menu" class="block">
        @*header*@
        <ul>
            <li>
                @Html.ActionLink("Home Page", "homepage", "Home")
            </li>
            <li>
                @Html.ActionLink("About", "about", "Home")
            </li>
            <li>
                @Html.ActionLink("Contact", "contact", "Home")
            </li>
        </ul>
    </div>
    <div class="block">
        @RenderBody()
    </div>

    <div class="block">
        @*footer*@
        <b> Tum Haklari Saklidir &copy;</b>
    </div>
</body>
</html>
